{
  "$id": "https://miro.com/mi-links.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MiLinks schema",
  "description": "A schema to validate MiLinks configuration",

  "type": "object",
  "required": ["type", "items", "name"],
  "properties": {
    "type": {
      "type": "string",
      "const": "group"
    },
    "name": {
      "type": "string",
      "description": "A descriptive name of the link group"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/linkOrGroup"
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false,

  "definitions": {
    "linkOrGroup": {
      "oneOf": [
        { "$ref": "#/definitions/link" },
        { "$ref": "#/definitions/linkGroup" }
      ]
    },
    "link": {
      "title": "Link",
      "description": "A web link",
      "required": ["type", "url", "title"],
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "link"
        },
        "url": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "linkGroup": {
      "title": "Link Group",
      "description": "A group of web link",
      "type": "object",
      "required": ["type", "items", "name"],
      "properties": {
        "type": {
          "type": "string",
          "const": "group"
        },
        "name": {
          "type": "string",
          "description": "A descriptive name of the link group"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/linkOrGroup"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "linkGroupRef": {
      "title": "Link Group Ref",
      "description": "A link group reference, either to a local or remote group",
      "type": "object",
      "required": ["type", "url"],
      "properties": {
        "type": {
          "type": "string",
          "const": "groupRef"
        },
        "url": {
          "type": "string",
          "description": "A URL to the link group. Accepts file:// URLs for local group references."
        },
        "alias": {
          "type": "string",
          "description": "A descriptive name to override the link group's original name."
        }
      }
    }
  }
}
